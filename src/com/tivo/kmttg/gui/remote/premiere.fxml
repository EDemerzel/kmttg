<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Button?>

<?import com.tivo.kmttg.gui.MyListView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tivo.kmttg.gui.remote.premiere"
    fx:id="panel" spacing="1">
    <HBox spacing="5" alignment="CENTER_LEFT">
    <padding><Insets top="5" right="0" bottom="0" left="5"/></padding>
        <Label text="Season Premieres"/>
        <Label /><!-- tivo_label... has no content. -->
        <ChoiceBox fx:id="tivo"></ChoiceBox>
        <Button fx:id="refresh" text="Search" onAction="#refreshCB"/>
        <ChoiceBox fx:id="days" value="12">
            <String fx:value="1"/>
            <String fx:value="2"/>
            <String fx:value="3"/>
            <String fx:value="4"/>
            <String fx:value="5"/>
            <String fx:value="6"/>
            <String fx:value="7"/>
            <String fx:value="8"/>
            <String fx:value="9"/>
            <String fx:value="10"/>
            <String fx:value="11"/>
            <String fx:value="12"/>
        </ChoiceBox>
        <Label text="Days" />
        <Button fx:id="record" text="Record" onAction="#recordCB"/>
        <Button fx:id="recordSP" text="Season Pass" onAction="#recordSPCB"/>
        <Button fx:id="wishlist" text="WL" onAction="#wishlistCB"/>
        <HBox minWidth="40" prefWidth="40"/>
        <Button fx:id="channels_update" text="Update Channels" onAction="#channels_updateCB"/>
    </HBox>
    <GridPane fx:id="row2" hgap="5" VBox.vgrow="ALWAYS">
    <padding><Insets top="0" right="0" bottom="0" left="5"/></padding>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="NEVER"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>
        <!-- table -->
        <MyListView fx:id="channels" orientation="VERTICAL" VBox.vgrow="ALWAYS" minWidth="150" maxWidth="150"
            GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    </GridPane>
</VBox>

