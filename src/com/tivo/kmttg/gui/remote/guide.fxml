<?xml version="1.0" encoding="UTF-8"?>
<?scenebuilder-stylesheet ../../../../../../release/css/kmttg.css?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.GridPane?>
<?import com.tivo.kmttg.gui.MyListView?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tivo.kmttg.gui.remote.guide"
    fx:id="panel" spacing="1">
    <HBox spacing="5" alignment="CENTER_LEFT">
    <padding><Insets top="5" right="0" bottom="0" left="5"/></padding>
        <Label text="Guide"/>
        <Label /><!-- tivo_label... has no content. -->
        <ChoiceBox fx:id="tivo"></ChoiceBox>
        <CheckBox fx:id="guide_channels" text="All" selected="false"/>
        <Label text="Start"/>
        <ChoiceBox fx:id="start"></ChoiceBox>
        <!-- guide_channels -->
        <Button fx:id="refresh" text="Channels" onAction="#refreshCB"/>
        <Button fx:id="export_channels" text="Export..." onAction="#export_channelsCB"/>
        <Button fx:id="record" text="Record" onAction="#recordCB"/>
        <Button fx:id="recordSP" text="Season Pass" onAction="#recordSPCB"/>
        <Button fx:id="wishlist" text="WL" onAction="#wishlistCB"/>
        <Button fx:id="manual_record" text="MR" onAction="#manual_recordCB"/>
        <Button fx:id="guide_refresh_todo" text="Refresh ToDo" onAction="#guide_refresh_todoCB"/>
    </HBox>
    <GridPane hgap="1" fx:id="tab_row" VBox.vgrow="ALWAYS">
    <padding><Insets top="0" right="0" bottom="0" left="5"/></padding>
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>
        <MyListView fx:id="ChanList" GridPane.columnIndex="0" GridPane.rowIndex="0" 
            minWidth="150" maxWidth="150" orientation="VERTICAL"/>
        <!--  table  -->
    </GridPane>
    
</VBox>

