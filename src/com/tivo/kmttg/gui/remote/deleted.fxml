<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tivo.kmttg.gui.remote.deleted"
    fx:id="panel" spacing="1">
    <HBox spacing="5" alignment="CENTER_LEFT">
    <padding><Insets top="5" right="0" bottom="0" left="5"/></padding>
        <Label text="Recently Deleted list"/>
        <Label /><!-- tivo_label... has no content. -->
        <ChoiceBox fx:id="tivo"></ChoiceBox>
        <Button fx:id="refresh" text="Refresh" onAction="#refreshCB"/>
        <Button fx:id="recover" text="Recover" onAction="#recoverCB"/>
        <Button fx:id="permDelete" text="Permanently Delete" onAction="#permDeleteCB"/>
        <Label fx:id="label"/>
        
    </HBox>
</VBox>

